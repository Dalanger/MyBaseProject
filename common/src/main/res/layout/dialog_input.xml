<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:minWidth="@dimen/dimen_280"
    android:background="@drawable/rec_white_r10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/dimen_15"
        android:id="@+id/tv_title"
        android:text="修改昵称"
        android:textStyle="bold"
        android:textColor="@color/dialogTitleTextColor"
        android:textSize="@dimen/dimen_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textCursorDrawable="@null"
        android:background="@drawable/stroke_graydd_white_r5"
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20"
        android:hint="请输入昵称"
        android:paddingTop="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:textColor="@color/dialogContentTextColor"
        android:textSize="@dimen/dimen_15"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/dialogDividerColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dialogCancelTextColor"
            android:textSize="@dimen/dimen_16"/>

        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="match_parent"
            android:background="@color/dialogDividerColor"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/dialogSureTextColor"
            android:textSize="@dimen/dimen_16"/>
    </LinearLayout>

</LinearLayout>