<?xml version="1.0" encoding="utf-8"?>
<com.dl.common.widget.SwipeMenuLayout android:id="@+id/menu_layout"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_15">


        <com.makeramen.roundedimageview.RoundedImageView

            android:scaleType="centerCrop"
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_15"
            app:riv_oval="true"
            android:src="@mipmap/dl_logo" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_logo"
            android:layout_toRightOf="@+id/iv_logo"
            android:text="textview"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16" />


        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_logo"
            android:layout_toRightOf="@+id/iv_logo"
            android:text="textview"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:text="10:12"
            android:textColor="@color/gray99"
            android:textSize="@dimen/dimen_14" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="match_parent"
            android:background="@color/grayDD"
            android:gravity="center"
            android:text="置顶"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="match_parent"
            android:background="@color/pure_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</com.dl.common.widget.SwipeMenuLayout>