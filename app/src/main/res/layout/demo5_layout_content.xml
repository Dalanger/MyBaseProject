<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/content_behavior">

    <com.androidkun.xtablayout.XTabLayout
        android:background="@color/white"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        app:xTabIndicatorWidth="@dimen/dimen_15"
        app:xTabIndicatorColor="@color/colorPrimary"
        app:xTabIndicatorHeight="@dimen/dimen_3"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="@color/colorPrimary"
        app:xTabTextColor="@color/black33"
        app:xTabSelectedTextSize="@dimen/dimen_16"
        app:xTabTextSize="@dimen/dimen_16" />

    <android.support.v4.view.ViewPager
        android:background="@color/grayF5"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>