<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".demo3.view.Demo3Activity">

    <include layout="@layout/action_bar_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/dimen_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/black"
                android:text="@string/demo3_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_1"
                android:textSize="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="测试两个接口同时请求"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_result_1"
                android:textSize="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_5"
                android:hint="请求结果1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_result_2"
                android:textSize="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_5"
                android:hint="请求结果2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/black"
                android:text="@string/demo3_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_2"
                android:textSize="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="测试嵌套请求"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_result_3"
                android:textSize="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_5"
                android:hint="嵌套请求结果"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/dimen_5"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/black"
                android:text="@string/demo3_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btn_3"
                android:textSize="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="测试合并数据"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_result_4"
                android:textSize="@dimen/dimen_14"
                android:layout_marginTop="@dimen/dimen_5"
                android:hint="合并数据结果"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>